#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int length, breadth;
    float perimeter, area;

    // Input
    scanf("%d", &length);
    scanf("%d", &breadth);

    // Calculations
    perimeter = 2.0 * (length + breadth);  // Length of rope
    area = length * breadth;               // Quantity of carpet

    // Output with required format
    printf("Required length is %.2fm\n", perimeter);
    printf("Required quantity of carpet is %.2fsqm\n", area);

    return 0;
}

  
