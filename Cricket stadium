#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main() {
    int length, breadth;

    // Read input
    scanf("%d", &length);
    scanf("%d", &breadth);

    // Calculate perimeter and area
    int perimeter = 2 * (length + breadth);
    int area = length * breadth;

    // Output the results
    printf("%d\n", perimeter);
    printf("%d\n", area);

    return 0;
}
